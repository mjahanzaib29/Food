<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dialog_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp">
        <Button
            android:id="@+id/cancel_customer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/ic_cancel_btn"></Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add customer to ticket"
            android:textStyle="bold"
            android:textSize="20dp"></TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BAACAC"
        android:layout_marginVertical="5dp"/>
    <TextView
        android:id="@+id/add_customer_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new customer"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimary"
        android:layout_marginVertical="10dp">

    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BAACAC"
        android:layout_marginVertical="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        >

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Recent"
         android:textColor="@color/colorPrimary">
     </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>